<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CodeMapper">
    <select id="findByPhone" parameterType="String" resultType="Code">
        SELECT *
        FROM Code
        WHERE phone = #{phone}
    </select>
    <insert id="insert" parameterType="Code">
        INSERT INTO Code(phone, avatar, date)
        VALUES(#{phone},#{avatar},#{date})
    </insert>
    <update id="update" parameterType="Code">
        UPDATE Code
        SET avatar = #{avatar}, date = #{date}
        WHERE phone = #{phone}
    </update>
</mapper>