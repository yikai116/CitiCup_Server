<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.QuestionMapper">
    <select id="get" parameterType="String" resultType="Question">
        SELECT *
        FROM question
        WHERE phone = #{phone}
    </select>
    <insert id="insert" parameterType="Question">
        INSERT INTO question(disease,safety,car,children,old,transport)
        VALUE (#{disease},#{safety},#{car},#{children},#{old},#{transport})
    </insert>
    <insert id="update" parameterType="Question">
        UPDATE question
        SET disease = #{disease},
            safety = #{safety},
            car = #{car},
            children = #{children},
            old = #{old},
            transport = #{transport}
        WHERE phone = #{phone}
    </insert>
</mapper>